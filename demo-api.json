{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "APIMServiceName": {
            "type": "string"
        },
        "demoApiID": {
            "type": "string"
        },
        "starterProductID": {
            "type": "string"
        },
        "demoApiPolicy": {
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.ApiManagement/service/apis",
            "name": "[concat(parameters('APIMServiceName'), '/apis/', parameters('demoApiID'))]",
            "apiVersion": "2018-01-01",
            "scale": null,
            "properties": {
                "displayName": "Demo API",
                "apiRevision": "1",
                "description": null,
                "serviceUrl": "http://echoapi.cloudapp.net/api",
                "path": "demo",
                "protocols": [
                    "https"
                ],
                "authenticationSettings": null,
                "subscriptionKeyParameterNames": null,
                "isCurrent": true
            }
        },
        {
            "type": "Microsoft.ApiManagement/service/products/apis",
            "name": "[concat(parameters('APIMServiceName'), '/', parameters('starterProductID'), '/', parameters('demoApiID'))]",
            "apiVersion": "2018-01-01",
            "scale": null,
            "properties": {
                "displayName": "Demo API",
                "apiRevision": "1",
                "description": null,
                "serviceUrl": "http://echoapi.cloudapp.net/api",
                "path": "demo",
                "protocols": [
                    "https"
                ],
                "authenticationSettings": null,
                "subscriptionKeyParameterNames": null,
                "isCurrent": true
            },
            "dependsOn": [
                "[resourceId('Microsoft.ApiManagement/service/apis', parameters('APIMServiceName'), parameters('demoApiID'))]"
            ]
        },
        {
            "type": "Microsoft.ApiManagement/service/apis/policies",
            "name": "[concat(parameters('APIMServiceName'), '/', parameters('demoApiID'), '/policy')]",
            "apiVersion": "2018-01-01",
            "properties": {
                "policyContent": "[parameters('demoApiPolicy')]",
                "contentFormat": "rawxml-link"
            },
            "dependsOn": [
                "[resourceId('Microsoft.ApiManagement/service/apis', parameters('APIMServiceName'), parameters('demoApiID'))]"
            ]
        }
    ]
}